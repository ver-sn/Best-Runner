{
  "name": "aspiritywebtemplate-server",
  "version": "0.1.0",
  "description": "Aspirity Web Template Server",
  "license": "ISC",
  "author": "Aspirity LTD",
  "scripts": {
    "start": "ts-node ./src/server.ts",
    "start:debug": "concurrently 'yarn run server:debug' 'yarn run dependencies'",
    "server:debug": "nodemon --exec node --inspect=0.0.0.0:5858 -r ts-node/register ./src/server.ts",
    "dependencies": "nodemon --config nodemon-dependencies.json --exec yarn install",
    "test": "mocha -R nyan -r ts-node/register ./tests/unit/**/*.ts",
    "test:all": "mocha -R nyan -r ts-node/register ./tests/**/*.ts"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs-then": "^1.0.1",
    "body-parser": "^1.18.2",
    "convict": "^4.2.0",
    "express": "^4.16.3",
    "express-validator": "^5.2.0",
    "express-winston": "^2.5.1",
    "mongoose": "^5.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "typegoose": "^5.2.1",
    "verror": "^1.10.0",
    "winston": "^2.4.2",
    "winston-daily-rotate-file": "^3.1.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/express": "^4.11.1",
    "@types/express-validator": "^3.0.0",
    "@types/express-winston": "^2.4.3",
    "@types/mocha": "^5.2.0",
    "@types/mongoose": "^5.0.13",
    "@types/node": "^10.0.6",
    "@types/passport": "^0.4.5",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "concurrently": "^3.5.1",
    "husky": "^1.0.0-rc.8",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.4",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.8.3"
  }
